!!! 5

%html
  = render 'head', title: 'GovAuBeta'
  %body
    %header{role: 'banner'}
      %section.govau--header
        %div.wrapper
          %div.govau--logo
            %a.logo{href: root_path}
              gov.au
            %span.badge--beta beta
      %section.hero
        %div.wrapper
          - if content_for?(:header)
            = yield(:header)
          - else
            %a.site-title{href: root_path} GOV.AU Beta
    %main
      = render 'navbar'
      %article
        = render 'toolbar'
        = render 'session_status'
        = render 'alerts'
        = yield
    %footer{role: "contentinfo"}
      %div.wrapper
        %p
          &lt;insert footer here&gt;
