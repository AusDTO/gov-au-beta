= inside_layout :application do
  %article#content{class: "content-main", tabindex: -1}
    = yield

  = content_for :header do
    = render 'header_group_page'

  = content_for :after_header do
    .brandbar.default{class: sunstate_class}
      .b1
      .b2

  = content_for :after_header do
    %div{class: "hero-med #{hero_class(@section)}"}
      .wrapper
        %h1
          = @section.name

  - if node.short_summary
    = content_for :meta_description do
      = node.short_summary

  = content_for :toolbar_actions do
    = render partial: 'application/page_actions', locals: {section: @section, node: @node}



  = content_for :navbar do
    = render partial: 'application/navbar', locals: {menu_nodes: @menu_nodes, active: @node}
