- breadcrumb :departments

= content_for :title do
  Departments

= content_for :after_header do
  .hero-med.corporate
    .wrapper
      %h1
        Departments


%article.content-listing
  %ul.list-highlighted
    - departments.each do |department|
      %li
        %a{href:  public_node_path(department.home_node)}
          - if department.prefix.present?
            %span
              = department.prefix
          = department.title

        - if department.agencies.any?
          %ul
            - department.agencies.each do |agency|
              %li= link_to(agency.name, public_node_path(agency.home_node))
